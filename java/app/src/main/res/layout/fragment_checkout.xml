<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" >

    <data>
        <variable
            name="viewmodel"
            type="com.fullstorydev.shoppedemo.ui.checkout.CheckoutViewModel" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_space"
            android:text="@string/billing_address"
            android:fontFamily="sans-serif-black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@+id/et_checkout_first_name"
                android:text="@string/first_name" />
            <EditText
                android:id="@+id/et_checkout_first_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:importantForAutofill="no"
                android:inputType="text"
                android:onTextChanged="@{viewmodel::setFirstName}" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@+id/et_checkout_last_name"
                android:text="@string/last_name" />
            <EditText
                android:id="@+id/et_checkout_last_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:importantForAutofill="no"
                android:inputType="text"
                android:onTextChanged="@{viewmodel::setLastName}" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@+id/et_checkout_address_1"
            android:text="@string/address_1" />
        <EditText
            android:id="@+id/et_checkout_address_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:importantForAutofill="no"
            android:inputType="text"
            android:onTextChanged="@{viewmodel::setAddress1}" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@id/et_checkout_address_2"
            android:text="@string/address_2" />
        <EditText
            android:id="@+id/et_checkout_address_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:importantForAutofill="no"
            android:inputType="text"
            android:onTextChanged="@{viewmodel::setAddress2}" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@id/et_checkout_city"
                android:text="@string/city" />
            <EditText
                android:id="@+id/et_checkout_city"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:importantForAutofill="no"
                android:inputType="text"
                android:onTextChanged="@{viewmodel::setCity}" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@id/spinner_checkout_states"
                android:text="@string/state" />
            <Spinner
                android:id="@+id/spinner_checkout_states"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onItemSelected="@{(parent,view,position,id)->viewmodel.setState(position)}" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@id/et_checkout_zip"
                android:text="@string/zip_code" />
            <EditText
                android:id="@+id/et_checkout_zip"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:importantForAutofill="no"
                android:inputType="number"
                android:onTextChanged="@{viewmodel::setZip}" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_space"
            android:text="@string/payment_details"
            android:fontFamily="sans-serif-black" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/credit_card_number"
            android:labelFor="@id/et_checkout_cart_number" />
        <EditText
            android:id="@+id/et_checkout_cart_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:importantForAutofill="no"
            android:inputType="number"
            android:onTextChanged="@{viewmodel::setCreditCardNumber}" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@id/spinner_checkout_month"
                android:text="@string/expiration" />
            <Spinner
                android:id="@+id/spinner_checkout_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onItemSelected="@{(parent,view,position,id)->viewmodel.setExpirationMonth(position)}" />
            <Spinner
                android:id="@+id/spinner_checkout_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onItemSelected="@{(parent,view,position,id)->viewmodel.setExpirationYear(position)}" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/security_code"/>
            <EditText
                android:id="@+id/et_checkout_security_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:importantForAutofill="no"
                android:inputType="number"
                android:onTextChanged="@{viewmodel::setSecurityCode}" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/subtotal" />
            <TextView
                android:id="@+id/tv_checkout_subtotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_checkout_purchase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/purchase" />
    </LinearLayout>
</layout>
