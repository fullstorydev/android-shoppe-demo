<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="item"
            type="com.fullstorydev.shoppedemo.data.Product" />
        <variable
            name="handlers"
            type="com.fullstorydev.shoppedemo.ui.cart.CartEventHandlers"/>
    </data>

    <LinearLayout
        android:id="@+id/li_cart"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_cart_product"
            android:layout_width="@dimen/product_image_size"
            android:layout_height="@dimen/product_image_size"
            app:imageURL="@{@string/img_host + item.image}"/>

        <LinearLayout
            android:id="@+id/view_cart_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/padding_space">

            <TextView
                android:id="@+id/tv_cart_product_name"
                android:textSize="@dimen/product_name_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{item.title}" />

            <TextView
                android:id="@+id/tv_cart_product_price_unit"
                android:textSize="@dimen/product_price_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{item.quantityInCart +` `+ @string/quantity_in_cart"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_remove_from_cart"
                android:onClick="@{()->handlers.onClickRemoveFromCart(item)}"
                android:text="@string/remove_from_cart">
            </Button>
        </LinearLayout>
    </LinearLayout>
</layout>