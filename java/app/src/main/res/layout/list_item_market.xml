<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="product"
            type="com.fullstorydev.shoppedemo.data.Product" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/image_market_product"
            android:layout_width="@dimen/product_image_size"
            android:layout_height="@dimen/product_image_size"
            app:imageURL="@{@string/img_host + product.image}"/>

        <LinearLayout
            android:id="@+id/view_market_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/padding_space">

            <TextView
                android:id="@+id/tv_market_product_name"
                android:textSize="@dimen/product_name_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{product.title}" />

            <TextView
                android:id="@+id/tv_market_product_price_unit"
                android:textSize="@dimen/product_price_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{product.price.toString()+'/'+product.unit}" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_add_to_cart"
                android:text="@string/add_to_cart">
            </Button>
        </LinearLayout>
    </LinearLayout>
</layout>